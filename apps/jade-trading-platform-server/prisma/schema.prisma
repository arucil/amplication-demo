datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Jade {
  auctions    Auction[]
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  image       Json?
  startingBid Float?
  title       String?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

model Auction {
  bids          Bid[]
  createdAt     DateTime  @default(now())
  endingTime    DateTime?
  highestBid    Float?
  id            String    @id @default(cuid())
  jade          Jade?     @relation(fields: [jadeId], references: [id])
  jadeId        String?
  startingPrice Float?
  startingTime  DateTime?
  updatedAt     DateTime  @updatedAt
}

model Bid {
  amount    Float?
  auction   Auction?  @relation(fields: [auctionId], references: [id])
  auctionId String?
  bidTime   DateTime?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bids      Bid[]
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  jades     Jade[]
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
